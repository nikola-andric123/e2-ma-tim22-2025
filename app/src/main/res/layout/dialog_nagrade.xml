<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacija_kovcega"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_fileName="treasure_chest.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <TextView
        android:id="@+id/tekst_protresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protresi telefon da otvoriš!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/layout_sa_nagradama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/nagrada_novcici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 200 novčića"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/nagrada_oprema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+ Oprema: Mač"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</LinearLayout>