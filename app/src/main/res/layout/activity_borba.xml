<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BorbaActivity">

    <ImageView
        android:id="@+id/slika_bosa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:srcCompat="@tools:sample/avatars" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacija_udarca"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignTop="@id/slika_bosa"
        android:layout_alignBottom="@id/slika_bosa"
        android:layout_alignStart="@id/slika_bosa"
        android:layout_alignEnd="@id/slika_bosa"
        android:layout_centerInParent="true"
        app:lottie_fileName="hit_effect.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/hp_bosa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slika_bosa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Boss HP"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/hp_bosa_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/hp_bosa_text"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:max="200"
        android:progress="200"
        android:progressTint="@android:color/holo_red_dark" />

    <LinearLayout
        android:id="@+id/info_korisnika_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dugme_napad"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pp_korisnika_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tvoja snaga (PP): --"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brojac_napada_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Preostali napadi: 5/5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sansa_napada_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Å ansa za pogodak: --%"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/dugme_napad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:text="NAPAD!"
        android:textSize="24sp" />

</RelativeLayout>