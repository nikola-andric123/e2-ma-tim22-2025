<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KreirajZadatakActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv zadatka" />
        <EditText
            android:id="@+id/editTextNazivZadatka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Npr. Istrčati 5km"
            android:inputType="textCapSentences"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Opis (opciono)" />
        <EditText
            android:id="@+id/editTextOpisZadatka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opis detalja zadatka"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kategorija"/>
        <Spinner
            android:id="@+id/spinnerKategorija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Težina zadatka"/>
        <Spinner
            android:id="@+id/spinnerTezina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bitnost zadatka"/>
        <Spinner
            android:id="@+id/spinnerBitnost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonVreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Izaberi vreme izvršenja"/>

        <Switch
            android:id="@+id/switchPonavljajuci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ponavljajući zadatak"/>

        <LinearLayout
            android:id="@+id/layoutPonavljajuciDetalji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Interval ponavljanja"/>
            <EditText
                android:id="@+id/editTextInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="npr. 2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jedinica ponavljanja"/>
            <Spinner
                android:id="@+id/spinnerJedinicaPonavljanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonDatumPocetka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Datum početka"/>
            <Button
                android:id="@+id/buttonDatumZavrsetka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Datum završetka"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonKreirajZadatak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Kreiraj zadatak"/>
    </LinearLayout>
</ScrollView>