<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv zadatka:"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/detalji_naziv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Učitavanje..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/detalji_opis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Učitavanje..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Težina:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/detalji_tezina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Učitavanje..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitnost:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/detalji_bitnost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Učitavanje..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vreme izvršenja:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/detalji_vreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Učitavanje..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_uradjen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Urađen"/>
            <Button
                android:id="@+id/btn_otkazan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Otkazan"/>
            <Button
                android:id="@+id/btn_izmeni"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Izmeni"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>