<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_shopping_cart_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Asset Shop"
                android:textColor="@color/my_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <!-- Currency Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_gems_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/coins"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_coins_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175,693"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Potions Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">   <!-- Change background color here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="24dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potions"
                android:textColor="@color/my_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"

                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restore health and gain magical abilities"
                android:textColor="@color/my_primary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <!-- Health Potion -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"

                    app:cardBackgroundColor="#8844AA88">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/iv_health_potion"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/red_potion" />

                        <TextView
                            android:id="@+id/tv_health_potion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_health_potion"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="One Time Power 20%"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/one_time_20"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mana Potion -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#884499DD">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/iv_mana_potion"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/purple_potion" />

                        <TextView
                            android:id="@+id/tv_mana_potion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_mana_potion"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="One Time Power 40%"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/one_time_40"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Strength Potion -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#88DD4444">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/iv_strength_potion"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/yellow_potion" />

                        <TextView
                            android:id="@+id/tv_strength_potion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_strength_potion"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="Permanent Power Boost 5%"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/perma_5"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Invisibility Potion -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#88AA44AA">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_invisibility_potion"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/wine_potion" />

                        <TextView
                            android:id="@+id/tv_invisibility_potion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_invisibility_potion"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Permanent Power Boost 10%"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/perma_10"
                            android:layout_width="120dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <!-- Clothes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothes"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"

                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade your character's appearance and abilities"
                android:textColor="@color/my_primary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <!-- Knight Armor -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#88666666">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_knight_armor"
                            android:src="@drawable/gloves"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                             />

                        <TextView
                            android:id="@+id/tv_knight_armor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_knight_armor"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Gloves"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />



                        <Button
                            android:id="@+id/btn_gloves"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Wizard Robe -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#884444AA">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_wizard_robe"
                            android:src="@drawable/shield"
                            android:layout_centerHorizontal="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                             />

                        <TextView
                            android:id="@+id/tv_wizard_robe_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_wizard_robe"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Shield"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />



                        <Button
                            android:id="@+id/btn_shield"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Dragon Scale Armor -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#88AA4444">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_dragon_armor"
                            android:src="@drawable/boots"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                             />

                        <TextView
                            android:id="@+id/tv_dragon_armor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_dragon_armor"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Boots"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />



                        <Button
                            android:id="@+id/btn_boots"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Weapons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weapons"
                android:textColor="@color/my_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powerful weapons to defeat your enemies"
                android:textColor="@color/my_primary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <!-- Magic Sword -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#8844AADD">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPGRADE"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/iv_magic_sword"
                            android:src="@drawable/sword"
                            android:layout_marginTop="20dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                             />

                        <TextView
                            android:id="@+id/tv_magic_sword_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_magic_sword"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Magic Sword"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />



                        <Button
                            android:id="@+id/sword"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Dragon Slayer -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#88DD4444">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPGRADE"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/iv_dragon_slayer"
                            android:src="@drawable/bow_and_arrow"
                            android:layout_marginTop="20dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                             />

                        <TextView
                            android:id="@+id/tv_dragon_slayer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_dragon_slayer"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:text="Dragon Slayer"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />



                        <Button
                            android:id="@+id/bow_and_arrow"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/rounded_buy_button"
                            android:drawableLeft="@drawable/coins_small"
                            android:drawablePadding="0dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="26dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="100"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>