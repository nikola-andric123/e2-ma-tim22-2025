<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MojaAplikacija"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RPGgame"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ClanChatActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ClanMemberActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ClanLeaderActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CreateClanActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FriendRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FindFriendsActivity"
            android:exported="false" />
        <activity
            android:name=".EquipmentSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".BorbaActivity"
            android:exported="false" />
        <activity
            android:name=".DetaljiZadatkaActivity"
            android:exported="false" />
        <activity
            android:name=".DetaljiZadatakaActivity"
            android:exported="false" />
        <activity
            android:name=".KreirajZadatakActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".ClanInviteReceiver" />
    </application>

</manifest>